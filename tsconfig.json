{
    "extends": ["@tsconfig/node20"],
    "compilerOptions": {
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "skipLibCheck": true,
      "allowJs": true,
      "esModuleInterop": true
    },
    "exclude": [
      "node_modules",
      "public/**/*",
      "plugins"
    ]
  }