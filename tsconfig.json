{
  "extends": ["@tsconfig/node21"],
  "compilerOptions": {
    "esModuleInterop": true,  // Enable this option
    "skipLibCheck": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "public/**/*"
  ]
}